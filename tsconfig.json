{
    "compileOnSave": false,

    "compilerOptions": {

        "target": "es5",
        "outDir": "./dist/out-tsc",

        "sourceMap": true,
        "declaration": false,

        "module": "commonjs",
        "moduleResolution": "node",

        "lib": [
            "es2016",
            "dom"
        ],

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
    }
}